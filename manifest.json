{
  "manifest_version": 2,

  "name": "AnotherTab",
  "description": "__MSG_main_description__",
  "version": "1.0",
  "icons" : {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "offline_enabled": true,
  "storage": {
    "managed_schema": "init.json"
  },
  "incognito" : "split",
  "permissions": [
    "tabs",
    "storage",
    "bookmarks",
    "contextMenus",
    "geolocation",
    "chrome://favicon/",
    //"location", // experimental
    "http://hydralien.net/"
  ],
  "browser_action": {
    "default_icon": "icons/19.png",
    "default_popup": "popup.html"
  },
  "chrome_url_overrides" : {
    "newtab": "main.html"
  },
  "background": {
    "scripts": [
      "scripts/init.js"
    ]
  }
}
